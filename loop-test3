package com.z;

public class TestXiongHuan2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int line =15;
		
		for (int i = 1; i <line ; i++) {
			//前面要打印空格 空格数目=总行号-当前行号
			for (int j = 1; j <=line-i; j++) {
				System.out.print(" ");
			}
			for (int j = 1; j <=(2*i - 1); j++) {
				
				System.out.print("*");
				
				}
			System.out.println("");
			
		}
		for (int i = line; i>=1 ; i--) {
			//前面要打印空格 空格数目=总行号-当前行号
			for (int j = 1; j <=line-i; j++) {
				System.out.print(" ");
			}
			for (int j = 1; j <=(2*i - 1); j++) {
				
				System.out.print("*");
				
				}
			System.out.println("");
			
		}
	}

}
